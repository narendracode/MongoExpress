<!doctype html>
<html>
<head>
	 <% include ./partials/head %>
	 <style>
        body{
            padding-top: 120px;
        }
    </style>
</head>
<body>

<% include ./partials/navbar %>

<div class="container">
<div class="row">
<% include ./partials/navbar-left-fixed %>
    <div class="col-sm-2">
      <div class='row'>
          <img src="../../profile_pic/<%=user.profile_pic%>" alt="Profile pic" class="img-thumbnail profile_pic">
      </div>  
     <form id="uploadProfilePicForm" enctype="multipart/form-data" action="/user/profile_pic/upload" method="post">
      <div class='row profilepic-upload-section'>
          <input type="file" multiple="multiple" id="userPhotoInput" name="userPhoto"  accept="image/*" />
      </div>  
      <div class='row profilepic-upload-section'>
          <input type="submit" name="submit" value="Upload" class="btn btn-info btn-sm">
      </div> 
      </form> 
    </div>
    <div class="col-sm-6">
	    <h1>Settings</h1>
	    <!-- LOGIN FORM -->
	    <form action="/user/<%=user._id %>/settings" method="post">
	       <div class="form-group">
			    <label>Display Name</label>
			    <input type="text" value="<%=user.displayName %>" class="form-control" name="displayName">
		    </div>
		    <div class="form-group">
			    <label>Email</label>
	    		<input type="text" value = "<%=user.local.email %>" class="form-control" name="email">
		    </div>
		    <button type="submit" class="btn btn-warning btn-lg">Save</button>
	    </form>
	    <hr>
    </div>
</div><!-- row -->
</div><!-- container -->
<!-- Footer -->
   <% include ./partials/footer %>
   <% include ./partials/load-js-afterbody %>
</body>
</html>
